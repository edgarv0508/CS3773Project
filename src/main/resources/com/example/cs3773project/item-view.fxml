      <Button fx:id="home" layoutX="45.0" layoutY="32.0" mnemonicParsing="false" onMouseClicked="#returnHome" text="Home" />
      <TableView fx:id="itemTable" layoutX="223.0" layoutY="114.0" prefHeight="219.0" prefWidth="341.0">
        <columns>
          <TableColumn fx:id="cItem" onEditCommit="#changeItemCellEvent" prefWidth="121.0" text="Item" />
          <TableColumn fx:id="cPrice" prefWidth="103.0" text="Amount" />
            <TableColumn fx:id="cAmount" prefWidth="116.0" text="Price" />
